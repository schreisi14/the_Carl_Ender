<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
<title>Bootstrap 101 Template</title>

<!-- Bootstrap -->
<link href="/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/extend.css">
<!-- Datepicker -->
<link rel="stylesheet" href="/css/bootstrap-datepicker3.standalone.css" />

<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
<!--[if lt IE 9]>
<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<![endif]-->
</head>
<body>

{{>nav}}

<div class="container">

  <div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h1 class="panel-title">Create Task</h1>
        </div>
        <div class="panel-body">
          <form class="form-horizontal" action="/task" method="post" id="createtask">
            <div class="input-group" id="ig">
              <span class="input-group-addon"><i class="glyphicon glyphicon-tag"></i></span>
              <input type="text" name="name" value="name" class="form-control">
            </div>

            <div class="input-group date" data-provide="datepicker" id="ig" data-date="12/03/2012">
              <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
              <input type="text" class="form-control" name="date" readonly>
            </div>
            <div class="input-group" id="ig">
              <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
              <input type="time" name="time" value="time" class="form-control">
            </div>
            <div class="input-group" id="ig">
              <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
              <input type="text" name="place" value="place" class="form-control">
            </div>
            <div class="input-group" id="igt">
              <span class="input-group-addon"><i class="glyphicon glyphicon-align-justify"></i></span>
              <textarea name="text" class="form-control" rows="4" form="createtask">Your Text</textarea>
            </div>
            <div class="input-group pull-right">
              <input type="button" name="cancel" value="Cancel" class="btn btn-danger btn-md" id="cb">
              <input type="submit" name="create" value="Create" class="btn btn-success btn-md" id="cb">
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="/js/bootstrap.min.js"></script>
<script src="/js/bootstrap-datepicker.js"></script>


<script type="text/javascript">

            // When the document is ready
            $(document).ready(function () {

                $('.input-group.date').datepicker({
                  autoclose: true,
                  format: "mm/dd/yyyy",
                  todayBtn: true, //adds a TodayBtn
                });
                $('.input-group.date').datepicker("setDate",new Date()); //Set the default Date to today

            });
        </script>


</script>
</body>
</html>
