{{#if task}}
{{#each task}}
<div class="col-md-4" id="panel{{_id}}">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">{{local.name}}
				<a data-toggle="collapse" href="#coll{{_id}}" class="pull-right"><span class="glyphicon glyphicon-chevron-down" aria-hidden="true" onclick="getTaskInfo('{{_id}}')"></span></a>
				<a href="#" class="pull-left" onclick="deleteTask('{{_id}}')"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
			</h3>
		</div>
		<div class="panel-collapse collapse" id="coll{{_id}}">

		<div class="panel-body">
			<div class="panel" class="list-group-item" id="location{{_id}}"></div>
			<div id="tasktext{{_id}}"></div>
		</div>
	</div>
		<div id="panel">
			<div class="panel-footer text-right">
				<span>
					{{dataFormat local.date}} at {{local.time}}
				</span>
			</div>
		</div>
	</div>
</div>
{{/each}}
{{/if}}
