{{#if user}}
<div class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
		<!-- Set Name -->
		<div class="panel panel-info" id="pi">
			<div class="panel-heading">
				<h1 class="panel-title">Your name:</h1>
			</div>
			<div class="panel-body">
				<div class="panel">
					Your current Name is: <b>{{user.local.name}}</b>
				</div>
				<form action="/user" method="post" class="form-horizontal">
						<div class="input-group" id="ig">
							<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
							<input type="text" name="name" placeholder="Set your name" class="form-control"/>
						</div>
						<input type="submit" value="Submit" class="btn btn-md btn-primary btn-block btn-signin"/>
				</div>
			</form>
		</div>
		<!-- Verify link -->
		<div class="panel panel-info" id="pi">
			<div class="panel-heading">
				<h1 class="panel-title">Account</h1>
			</div>
			<div class="panel-body">
				<a href="/sendtoken" class="btn btn-md btn-primary btn-block btn-signin">Verify Account</a>
		</div>

</div>
{{/if}}
