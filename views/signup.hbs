  <![endif]-->
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-header">
      <ul class="nav navbar-nav">
        <li>
          <a href="#" class="navbar-brand">The Carl-Ender</a>
        </li>
      </ul>
    </div>
  </nav>




  <div class="container">
    <div class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">


        <div class="panel panel-info" id="pi">
          <div class="panel-heading">
            <h1 class="panel-title">Login</h1>
          </div>
          <div class="panel-body">
            <form action="/signup" method="post" class="form-horizontal">

                <div class="input-group" id="ig">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                  <input type="email" name="email" placeholder="eMail" class="form-control"/>
                </div>

                <div class="input-group" id="ig">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                  <input type="password" name="password" placeholder="password" class="form-control" id="password" onkeyup="check_pass()"/>
                </div>
								<div class="input-group" id="ig">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                  <input type="password" name="password2" placeholder="password" class="form-control" id="confirm_password" onkeyup="check_pass()"/>
                </div>
                <input type="submit" value="SignUp" class="btn btn-md btn-primary btn-block btn-signin" id="submit"/>
            </div>
          </form>
					<div class="panel-footer">
						<div class="text-right">
								Already Signed Up?

							<div class="btn btn-default">
								<a href="/login">Log In</a>
							</div>
						</div>

					</div>
        </div>

  </div>


  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
